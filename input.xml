<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="input.xsd">
   <gravity>-1000.0</gravity>
  <base_output_file>out</base_output_file>
  <xvf_data_file>xvfData</xvf_data_file>
  <plot_data_file>true</plot_data_file>
  <frequency>15</frequency>
  <dimensions>2</dimensions>
  <start_time>0</start_time>
  <tend>10</tend>
  <delta_t>0.00005</delta_t>
  <input_file>unused</input_file>
  <cuboid>
    <position>
      <x>2</x>
      <y>10</y>
      <z>0</z>
    </position>
    <number>
      <x>15</x>
      <y>30</y>
      <z>1</z>
    </number>
    <distance>1.225</distance>
    <mass>1.0</mass>
    <epsilon>5</epsilon>
    <sigma>1</sigma>
    <type>1</type>
    <velocity>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </velocity>
  </cuboid>

  
  <boundaryCondition>
    <boundary>reflecting</boundary>
    <position>right</position>
  </boundaryCondition>
  <boundaryCondition>
    <boundary>outflow</boundary>
    <position>left</position>
  </boundaryCondition>
    <boundaryCondition>
    <boundary>periodic</boundary>
    <position>top</position>
  </boundaryCondition>
    <boundaryCondition>
    <boundary>outflow</boundary>
    <position>bottom</position>
  </boundaryCondition>
    <boundaryCondition>
    <boundary>outflow</boundary>
    <position>front</position>
  </boundaryCondition>
    <boundaryCondition>
    <boundary>outflow</boundary>
    <position>back</position>
  </boundaryCondition>

  <LinkedCellDomain>
    <dimension>
      <x>10</x>
      <y>60</y>
      <z>1</z>
    </dimension>
    <cutoff>3</cutoff>
  </LinkedCellDomain>
  <Thermostats>
    <initial_temp>60</initial_temp>
    <applied_after>10</applied_after>
    <delta_temp>1</delta_temp>
    <changed_after>50</changed_after>
    <target_temp>30</target_temp>
  </Thermostats>
</input>
