<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="input.xsd">
   <gravity>-0.001</gravity>
  <base_output_file>out</base_output_file>
  <plot_vtk_file>true</plot_vtk_file>
  <xvf_data_file>xvfData</xvf_data_file>
  <plot_xvf_file>true</plot_xvf_file>
  <use_thermostat>false</use_thermostat>
  <frequency>25</frequency>
  <dimensions>3</dimensions>
  <start_time>0</start_time>
  <tend>500</tend>
  <delta_t>0.01</delta_t>
  <input_file>unused</input_file>
  <cuboid>
    <position>
      <x>15</x>
      <y>15</y>
      <z>15</z>
    </position>
    <number>
      <x>50</x>
      <y>50</y>
      <z>1</z>
    </number>
    <distance>2.2</distance>
    <mass>1.0</mass>
    <epsilon>1.0</epsilon>
    <sigma>1.0</sigma>
    <type>1</type>
    <nature>1</nature>
    <velocity>
      <x>0</x>
      <y>0</y>
      <z>0</z>
    </velocity>
  </cuboid>

  <boundaryCondition>
    <left>1</left>
    <right>1</right>
    <bottom>1</bottom>
    <top>1</top>
    <front>1</front>
    <back>1</back>
  </boundaryCondition>

  <LinkedCellDomain>
    <dimension>
      <x>148</x>
      <y>148</y>
      <z>148</z>
    </dimension>
    <cutoff>4</cutoff>
  </LinkedCellDomain>
  <Thermostats>
    <initial_temp>0.5</initial_temp>
    <applied_after>1</applied_after>
    <delta_temp>1000</delta_temp>
    <changed_after>50</changed_after>
    <target_temp>0.5</target_temp>
  </Thermostats>
</input>
