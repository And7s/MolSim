<input xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="input.xsd">
   <gravity>-12.44</gravity>
  <base_output_file>out</base_output_file>
  <plot_vtk_file>true</plot_vtk_file>
  <xvf_data_file>water</xvf_data_file>
  <plot_xvf_file>false</plot_xvf_file>
  <use_thermostat>false</use_thermostat>
  <frequency>25</frequency>
  <dimensions>3</dimensions>
  <start_time>0</start_time>
  <tend>10</tend>
  <delta_t>0.00005</delta_t>
  <input_file>unused</input_file>


  <sphere>
    <position>
      <x>30</x>
      <y>18</y>
      <z>25</z>
    </position>
    <radius>5</radius>
    <distance>1.2</distance>
    <mass>1</mass>
    <epsilon>1</epsilon>
    <sigma>1.2</sigma>
    <type>5</type>
    <nature>0</nature>
	<velocity>
      <x>0</x>
      <y>0</y>
      <z>0</z>
    </velocity>
  </sphere>

  <boundaryCondition>
    <left>2</left>
    <right>2</right>
    <bottom>1</bottom>
    <top>1</top>
    <front>2</front>
    <back>2</back>
  </boundaryCondition>

  <LinkedCellDomain>
    <dimension>
      <x>60</x>
      <y>24</y>
      <z>51</z>
    </dimension>
    <cutoff>3</cutoff>
  </LinkedCellDomain>
  <Thermostats>
    <initial_temp>0.5</initial_temp>
    <applied_after>1000</applied_after>
    <delta_temp>1</delta_temp>
    <changed_after>1000</changed_after>
    <target_temp>0.5</target_temp>
  </Thermostats>
</input>
