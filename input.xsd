<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">



  <xsd:complexType name="input_t">

    <xsd:annotation>
      <xsd:documentation>
        Input file for MolSim
      </xsd:documentation>
    </xsd:annotation>

    <xsd:sequence>

      



      <xsd:element name="base_output_file" type="xsd:string"></xsd:element>

      <xsd:element name="frequency" type="xsd:integer"></xsd:element>

      <xsd:element name="delta_t" type="xsd:float"></xsd:element>

      <xsd:element name="tend" type="xsd:integer"></xsd:element>

      <xsd:element name="input_file" type="xsd:string"></xsd:element>
      <xsd:element type="cuboid" name="cuboid" maxOccurs="unbounded"></xsd:element>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="cuboid">
    <xsd:sequence>
      <xsd:element type="vectorF" name="position"></xsd:element>
      <xsd:element type="vectorI" name="number"></xsd:element>
      <xsd:element type="xsd:float" name="distance"></xsd:element>
      <xsd:element type="xsd:float" name="mass"></xsd:element>
      <xsd:element type="vectorF" name="velocity"></xsd:element>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="vectorF">
    <xsd:sequence>
      <xsd:element type="xsd:float" name="x"></xsd:element>
      <xsd:element type="xsd:float" name="y"></xsd:element>
      <xsd:element type="xsd:float" name="z"></xsd:element>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="vectorI">
    <xsd:sequence>
      <xsd:element type="xsd:integer" name="x"></xsd:element>
      <xsd:element type="xsd:integer" name="y"></xsd:element>
      <xsd:element type="xsd:integer" name="z"></xsd:element>
    </xsd:sequence>
  </xsd:complexType>


  <xsd:element name="input" type="input_t">
    <xsd:annotation>
      <xsd:documentation>
        Root whatever
      </xsd:documentation>
    </xsd:annotation>
  </xsd:element>

</xsd:schema>
