    <left>2</left>
    <right>2</right>
    <bottom>1</bottom>
    <top>1</top>
    <front>2</front>
    <back>2</back>
  </boundaryCondition>

  <LinkedCellDomain>
    <dimension>
      <x>30</x>
      <y>50</y>
      <z>30</z>
    </dimension>
    <cutoff>3</cutoff>
  </LinkedCellDomain>
  <Thermostats>
    <initial_temp>0.5</initial_temp>
    <applied_after>1000</applied_after>
    <delta_temp>1</delta_temp>
    <changed_after>1000</changed_after>
    <target_temp>0.5</target_temp>
  </Thermostats>
